<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/mapViewLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <com.google.android.gms.maps.MapView
            android:id="@+id/mapview1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            map:cameraTargetLat="56.1304"
            map:cameraTargetLng="-106.3468"
            map:zoom = "3" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/location_toggle_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="16dp"
            app:srcCompat="@drawable/ic_my_loc"
            android:clickable="true"
            tools:ignore="VectorDrawableCompat"
            app:backgroundTint="#FFFFFFFF"/>

    </RelativeLayout>


    <!-- Layout 1-->
    <LinearLayout
        android:id="@+id/layoutMeasure"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="gone">


        <!-- Layout 2 Distance-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_weight="0.50"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/upBtn"
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                 />

<!--
            android:background="@drawable/ic_keyboard_arrow_up_black_24dp"
-->

            <TextView
                android:id="@+id/txtDistanceMeasure"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginBottom="0dp"
                android:layout_weight="0.60"
                android:gravity="center"
                android:text="0 km"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:background="@color/white"
                android:textSize="22dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginTop="-7dp"
                android:layout_marginBottom="-7dp"
                android:layout_weight="0.40"
                android:gravity="center"
                android:text="@string/distance"
                android:textAlignment="center"
                android:textColor="@color/textGrey"
                android:background="@color/md_white_1000"
                android:textSize="11dp" />

        </LinearLayout>


        <!--Divider-->
        <View
            android:layout_width="0.5dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@color/textGrey" />

        <!-- Layout 3 Elevation-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/md_white_1000"
            android:layout_weight="0.50"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/deleteBtn"
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"


                 />

<!--
            android:background="@drawable/trash"
-->


            <TextView
                android:id="@+id/txtElevationMeasure"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginBottom="0dp"
                android:layout_weight="0.60"
                android:gravity="center"
                android:text="0 m"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:background="@color/white"
                android:textSize="22dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginTop="-7dp"
                android:layout_marginBottom="-7dp"
                android:layout_weight="0.40"
                android:gravity="center"
                android:text="@string/elevation"
                android:textAlignment="center"
                android:textColor="@color/textGrey"
                android:background="@color/white"
                android:textSize="11dp" />

        </LinearLayout>

    </LinearLayout>


    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:paddingBottom="30dp"
        android:visibility="gone" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/drop_first_pin_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fragment_measure_text_view_height"
            android:layout_weight="0.2"
            android:background="@color/white"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/measureMessage"
            android:textColor="@color/md_black_1000"
            android:textSize="@dimen/fragment_text_size"/>

        <TextView
            android:id="@+id/drop_another_pin_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fragment_measure_text_view_height"
            android:layout_weight="0.2"
            android:background="@color/white"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/measureMessage2"
            android:textColor="@color/md_black_1000"
            android:textSize="@dimen/fragment_text_size"/>

    </FrameLayout>

</LinearLayout>

<FrameLayout
    android:id="@+id/measureSearchLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:visibility="gone" />


</FrameLayout>